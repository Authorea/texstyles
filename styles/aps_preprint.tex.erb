\documentclass[%
 prl,preprint,
%superscriptaddress,
%groupedaddress,
%unsortedaddress,
%runinaddress,
%frontmatterverbose,
%preprint,
%showpacs,preprintnumbers,
%nofootinbib,
%nobibnotes,
%bibnotes,
 amsmath,amssymb,
 aps,
%pra,
%prb,
%rmp,
%prstab,
%prstper,
%floatfix,
]{revtex4-1}


<%=@default_packages%>

%\usepackage{babel}

<%=@header%>

\begin{document}

\title{<%=@title%>}
<% if !@alternative_author_string.to_s.empty? %>
 <%= @alternative_author_string %>
<% else %>
\author{<%=@first_author%>}
\affiliation{<%=@first_affiliation%>}
<% if !@coauthor_list.to_a.empty? %><% for i in (0..@coauthor_list.length-1) %>
\author{<%=@coauthor_list[i]%>}
\affiliation{<%=@coauthor_affiliations[i]%>}
<% end %>
<% end %>
<% end %>

<%= @abstract_begin_end %>


%\pacs{Valid PACS appear here}% PACS, the Physics and Astronomy
                             % Classification Scheme.
%\keywords{Suggested keywords}%Use showkeys class option if keyword
                              %display desired
